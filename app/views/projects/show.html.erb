<div class="container-fluid page-full">

  <a href="<%= projects_path %>" class="back-link">&#8592 Go back to Projects</a>
  
  <h2 class="text-center"><%= @project.title %> 
    <% if user_signed_in? %>
    - <%= link_to "Edit", controller: "projects", action: "edit", id: @project.id %>
    <% end %>
  </h2>
  <h4 class="text-center <%= status_color(@project.status) %>"><%= format_status(@project.status) %></h4>

  <div class="col-md-10 col-md-offset-1">
    <p><%= @project.description %></p>
 
    <hr/>
    <h4>Updates</h4>
    <% if user_signed_in? %>
        <%= link_to "Add Update", controller: "updates", action: "new", project_id: @project.id %>
    <% end %>

    <% @updates.each do |u| %>
      <h5><%= u.title %>
      <% if u.url.present? %>
        (<%= link_to "Link", u.url %>)
      <% end %>
      </h5>
      
      <div><%= u.description %></div>
      <div>Updated at: <%= u.updated_at %>
        <% if user_signed_in? %>
          <%= link_to "Edit", controller: "updates", action: "edit", project_id: @project.id, id: u.id %>
        <% end %>
      </div>
    <% end %>

    <hr />
  </div>
  <div id="disqus_thread" class="col-md-10 col-md-offset-1"></div>

</div>
