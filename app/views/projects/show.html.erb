<a href="/" class="btn btn-info" role="button">Go back to Projects</a>
<h1><%= @project.title %> 
	<% if user_signed_in? %>
	- <%= link_to "Edit", controller: "project", action: "edit", id: @project.id %>
	<% end %>
</h1>
<h4>Status: <%= format_status(@project.status) %></h4>
<p><%= @project.description %></p>

<h4>Updates</h4>
<% if user_signed_in? %>
    <%= link_to "Add Update", controller: "update", action: "new", project_id: @project.id %>
<% end %>

<% @updates.each do |u| %>

	<%= u.title %>
	<%= u.description %>
	<%= u.url %>

<% end %>


<h4>Comments</h4>
<div id="disqus_thread" class="col-md-10 col-md-offset-1"></div>

