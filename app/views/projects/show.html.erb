<div class="container-fluid page-full">

  <a href="<%= projects_path %>" class="back-link">&#8592 Go back to Projects</a>

  <h2 class="text-center"><%= @project.title %>
    <% if true %>
    - <%= link_to "Edit", controller: "projects", action: "edit", id: @project.id %>
    <% end %>
  </h2>
  <h4 class="text-center <%= status_color(@project.status) %>"><%= format_status(@project.status) %></h4>

  <div class="col-md-10 col-md-offset-1">
    <p><%= @project.description %></p>

    <hr/>
    <h4>Updates</h4>
    <% if current_user %>
        <%= link_to "Add Update", controller: "updates", action: "new", project_id: @project.id %>
    <% end %>

    <% @updates.each do |u| %>
      <h5><%= u.title %>
      <% if u.url.present? %>
        (<%= link_to "Link", u.url %>)
      <% end %>
      </h5>

      <div><%= u.description %></div>
      <div>Updated at: <%= u.updated_at %>
        <% if true %>
          <%= link_to "Edit", controller: "updates", action: "edit", project_id: @project.id, id: u.id %>
        <% end %>
      </div>
    <% end %>

    <hr />
  </div>
  <div id="disqus_thread" class="col-md-10 col-md-offset-1"></div>

<script>
  var disqus_config = function () {
      this.page.url = window.href;  // Replace PAGE_URL with your page's canonical URL variable
      this.page.identifier = window.location.pathname; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
  };

  (function() {  // REQUIRED CONFIGURATION VARIABLE: EDIT THE SHORTNAME BELOW
      var d = document, s = d.createElement('script');

      s.src = '//manifestotracker.disqus.com/embed.js';

      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
  })();
</script>
</div>
